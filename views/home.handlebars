<div class="">
    {{#each blogs as |blog|}}
    <div class="row justify-content-center">
        <div class="col-8 card m-2 align-self-center blog-post-home">
            <h2>{{blog.title}}</h2>
            <p>{{blog.content}}</p>
            <p>Created by: {{blog.user.username}} on {{blog.date_created}}</p>
            <div>
                <button class="btn btn-primary view-comments" id="{{blog.id}}">View Comments</button>
                <button class="btn btn-primary leave-comment" id="{{blog.id}}">Leave Comment</button>
            </div>
        </div>
    </div>
    {{/each}}
</div>